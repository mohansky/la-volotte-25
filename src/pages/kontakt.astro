---
// pages/kontakt.astro

import Address from "@/components/Sections/Address.astro";
import CTA from "@/components/Sections/CTA.astro";
import Breadcrumbs from "@/components/ui/Breadcrumbs.astro";
import Container from "@/components/ui/Container.astro";
import Form from "@/components/ui/Form.astro";
import Heading from "@/components/ui/Heading.astro";
import Layout from "@/layouts/Layout.astro";
import { getCollection } from "astro:content"; 

const siteData = await getCollection("siteData");
const siteInfo = siteData[0].data;
const site = siteInfo;
---

<Layout>
  <Container width="marginxy">
    <Breadcrumbs />
    <section class="py-10">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div>
          <Address
            contactTitle={site.contactTitle}
            contactSubtitle={site.contactSubtitle}
            contactdetails={site.contactdetails}
            socialTitle={site.socialTitle}
            socials={site.socials}
          />
        </div>

        <div>
          <Heading size="lg" class="mb-5">Bitte nehmen Sie Kontakt mit uns auf. </Heading>
          <Form />
        </div>
      </div>
    </section>
  </Container>
   <CTA/>
</Layout>
